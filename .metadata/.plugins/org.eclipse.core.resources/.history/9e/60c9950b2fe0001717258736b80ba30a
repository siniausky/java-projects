package Exercises;
import java.util.Scanner;
public class SumTheDigits {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
			System.out.print("Please, enter a digit from 0 to 1000: ");
			double digit = in.nextDouble();
			double first = digit / 1000;
			digit /=1000;
			double second = (digit / 1000) %100;
			double third = (digit  / 100) % 10;;
			double fourth = (digit / 10) %1;
			System.out.println((int)first);
			System.out.println((int)second);
			System.out.println((int)third);
			System.out.println((int)fourth);

		

		in.close();
		
	}

}
